<h1 class="center-title roboto_800">Editar usuario</h1>
<div class="button_back">
    <button class="roboto_400" onclick="return_home()">Home</button>
</div>
<div class="form_center">
    {{!-- <form action="/api/admin/edit-user/{{user._id}}?_method=PUT" method="POST"> --}}
    <form id="edit_user-form">
        {{!-- <input class="roboto_400" type="hidden" name="_method" value="PUT"> --}}
